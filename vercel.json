// vercel.json
{
  "version": 2,
  "builds": [
    {
      "src": "server.js", // Seu arquivo de entrada principal
      "use": "@vercel/node",
      "config": { "runtime": "nodejs18.x" } // Versão do Node.js
    }
  ],
  "routes": [
    {
      "src": "/(.*)", // Roteia todas as requisições
      "dest": "server.js" // Para o seu arquivo de entrada
    }
  ]
}
